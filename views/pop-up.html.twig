{% extends 'layout.html.twig' %}



{% block title %} Cartes pop-up {% endblock %}

{% block header %}
{# <!-- {{affichage}} --> #}
<!-- HEADER -->
<header class="accueil container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <a class="navbar-brand" href="#">LOGO</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>       
    </nav>
</header>
{% endblock%}

{% block main %}
<main>

<h1> Cartes pop-up</h1>
{% for i in donnees %}
<div>

     <div class="container-fluid">
        
        <div class="container">
        
            <div class="row">
                
                <div class="col-12">                         
                        <h3>{{i.nom_manifestation}}</h3>
                    <p>
                        Date de début: {{i.date_debut}} <br> Date de fin: {{i.date_de_fin}} <br> 
                        Domaine: {{i.domaine}} <br> Complément domaine: {{i.complement_domaine}} <br>
                        Site web: <a href={{i.site_web}}>{{i.site_web}}</a><br>
                    </p>
                </div>
            </div>
        </div>
    </div>
    

</div>
{% endfor %}
</main>

{% endblock %}


{% block script %} {% endblock %}